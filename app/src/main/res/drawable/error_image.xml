<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFE0E0" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item
        android:bottom="32dp"
        android:left="32dp"
        android:right="32dp"
        android:top="32dp">
        <shape android:shape="oval">
            <solid android:color="#FFB0B0" />
        </shape>
    </item>
    <item
        android:bottom="40dp"
        android:left="40dp"
        android:right="40dp"
        android:top="40dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FF6B6B" />
            </shape>
        </rotate>
    </item>
</layer-list>